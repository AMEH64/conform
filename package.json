{
	"private": true,
	"name": "conform",
	"license": "MIT",
	"scripts": {
		"build": "pnpm run cleanup && run-s build:*",
		"build:js": "rollup -c",
		"build:ts": "tsc -b",
		"watch": "run-p watch:*",
		"watch:js": "pnpm run build:js -- --watch",
		"watch:ts": "pnpm run build:ts -- --watch",
		"guide": "pnpm --filter ./guide run dev ",
		"playground": "pnpm --filter ./playground run dev",
		"cleanup": "rimraf --glob ./packages/*/*.{d.ts,cjs,mjs,js,tsbuildinfo}",
		"test": "pnpm --filter ./playground run build && playwright test",
		"lint": "eslint --ignore-path .gitignore --cache --ext .js,.jsx,.ts,.tsx .",
		"prepare": "husky install"
	},
	"dependencies": {
		"@conform-to/dom": "workspace:*",
		"@conform-to/react": "workspace:*",
		"@conform-to/validitystate": "workspace:*",
		"@conform-to/yup": "workspace:*",
		"@conform-to/zod": "workspace:*"
	},
	"devDependencies": {
		"@babel/core": "^7.17.8",
		"@babel/preset-env": "^7.20.2",
		"@babel/preset-react": "^7.18.6",
		"@babel/preset-typescript": "^7.20.2",
		"@playwright/test": "^1.36.2",
		"@remix-run/eslint-config": "^1.19.3",
		"@remix-run/node": "^1.19.3",
		"@rollup/plugin-babel": "^5.3.1",
		"@rollup/plugin-node-resolve": "^13.3.0",
		"@types/node": "^20.10.4",
		"husky": "^8.0.3",
		"lint-staged": "^13.1.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.4",
		"rimraf": "^5.0.1",
		"rollup": "^2.79.1",
		"rollup-plugin-copy": "^3.4.0",
		"typescript": "^5.2.2"
	},
	"engines": {
		"node": ">=20"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": "eslint --ignore-path .gitignore --cache --ext .js,.jsx,.ts,.tsx",
		"*.{js,jsx,ts,tsx,css,json,yaml}": "prettier --ignore-path .gitignore --write",
		"*.md": "prettier --ignore-path .gitignore --write --use-tabs false"
	}
}
